<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Edit Contact" contentWidth="auto" contentHeight="auto" class="flexItemCls">
		<beginButton>
			<Button text="SAVE" press="onContEditSave"/>
		</beginButton>
		<endButton>
			<Button text="CANCEL" press="onContEditCancel"/>
		</endButton>
		<VBox class="sapUiSmallMarginTop sapUiSmallMarginBeginEnd" height="auto">
			<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
				<VBox class="sapUiSmallMarginEnd">
					<Label text="First Name"></Label>
					<Input value="{oContEditModel>/sFname}" width="10rem"></Input>
				</VBox>
				<VBox class="sapUiSmallMarginEnd">
					<Label text="Last Name"></Label>
					<Input value="{oContEditModel>/sLName}" width="10rem"></Input>
				</VBox>
				<VBox class="sapUiSmallMarginEnd">
					<Label text="Email"></Label>
					<Input value="{oContEditModel>/sEmail}" width="10rem"></Input>
				</VBox>
				<VBox class="sapUiSmallMarginEnd">
					<Label text="Phone"></Label>
					<Input value="{oContEditModel>/sPhone}" width="10rem"></Input>
				</VBox>
				<VBox class="sapUiSmallMarginEnd">
					<Label text="Relation Type"></Label>
					<Input value="{oContEditModel>/sRelType}" width="10rem"></Input>
				</VBox>
			</HBox>
		</VBox>
	</Dialog>
</core:FragmentDefinition>